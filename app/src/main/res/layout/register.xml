<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
    android:id="@+id/imageView"
    android:layout_width="60dp"
    android:layout_height="75dp"
    android:layout_marginTop="50dp"
    android:background="@drawable/logo"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    />

    <EditText
        android:id="@+id/txtIme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:ems="10"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Ime"
        tools:text=""
        />

    <EditText
        android:id="@+id/txtPrezime"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtIme"
        android:ems="10"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="prezime"
        tools:text=""
        />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPrezime"
        android:ems="10"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="username"
        tools:text=""
        />
    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUsername"
        android:ems="10"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="password"
        tools:text=""
        />

    <RadioButton
        android:id="@+id/radioButtonKupac"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_below="@id/txtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp" />




    <RadioButton
        android:id="@+id/radioButtonProdavac"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_below="@id/radioButtonKupac"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp" />



</RelativeLayout>