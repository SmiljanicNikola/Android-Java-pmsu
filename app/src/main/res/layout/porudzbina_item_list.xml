<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_margin="3dp"
        android:textStyle="bold"
        android:id="@+id/text_id"
        android:textSize="2sp"
        android:layout_gravity="center"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Satnica: "
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_toRightOf="@id/textView1"
        android:id="@+id/textViewSatnica"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Komentar: "
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_below="@id/textView1"
        android:id="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_toRightOf="@id/textView2"
        android:layout_below="@id/textViewSatnica"
        android:textColor="#000"
        android:layout_gravity="center"
        android:id="@+id/textViewKomentar"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Artikal: "
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_below="@id/textView2"
        android:id="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_toRightOf="@id/textView3"
        android:layout_below="@id/textViewKomentar"
        android:textColor="#000"
        android:layout_gravity="center"
        android:id="@+id/textViewArtikal"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Kolicina: "
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_below="@id/textView3"
        android:id="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_below="@id/textViewArtikal"
        android:layout_toRightOf="@id/textView4"
        android:layout_gravity="center"
        android:id="@+id/textViewKolicina"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Cena pojedinacno: "
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_below="@id/textView4"
        android:id="@+id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_toRightOf="@id/textView5"
        android:layout_below="@id/textViewKolicina"
        android:layout_gravity="center"
        android:id="@+id/textViewCenaPojedinacno"
        />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center"
        android:id="@+id/textViewCenaSaAkcijom"
        /> -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Cena ukupno: "
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_below="@id/textView5"
        android:id="@+id/textView6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_below="@id/textViewCenaPojedinacno"
        android:textColor="#000"
        android:layout_toRightOf="@id/textView6"
        android:layout_gravity="center"
        android:id="@+id/textViewCenaUkupno"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recenziraj"
        android:layout_weight="2"
        android:background="#0288D1"
        android:layout_below="@id/textView6"
        android:layout_marginTop="20dp"
        android:layout_marginRight="75dp"
        android:layout_marginLeft="75dp"
        android:id="@+id/btn_edit"/>




</RelativeLayout>