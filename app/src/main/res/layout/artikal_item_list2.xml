    <TextView
        android:layout_width="1dp"
        android:layout_marginTop="3dp"
        android:text="Id"
        android:textStyle="bold"
        android:id="@+id/text_id"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="2sp"
        android:layout_height="1dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_margin="13dp"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/imgIcon"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/textViewNaziv"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imgIcon"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"

        android:layout_gravity="center"
        android:clickable="false"
        android:editable="false"
        android:text="Naziv"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opis"
        android:layout_toRightOf="@id/imgIcon"
        android:layout_below="@id/textViewNaziv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"

        android:textSize="16sp"
        android:textStyle="bold"
        android:clickable="false"
        android:editable="false"
        android:textColor="#000"
        android:layout_gravity="center"
        android:id="@+id/textViewOpis"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cena"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textViewOpis"
        android:layout_toRightOf="@id/imgIcon"
        android:textSize="16sp"
        android:textStyle="bold"
        android:clickable="false"
        android:layout_gravity="center"
        android:editable="false"
        android:textColor="#000"
        android:id="@+id/textViewCena"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akcijska cena"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textViewCena"
        android:layout_toRightOf="@id/imgIcon"
        android:textSize="16sp"
        android:textStyle="bold"
        android:clickable="false"
        android:layout_gravity="center"
        android:editable="false"
        android:textColor="#000"
        android:id="@+id/textViewAkcijskaCena"/>

    <LinearLayout
        android:layout_below="@id/imgIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        >
        <EditText
            android:id="@+id/editText_kolicina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:hint="Unesite kolicinu"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="italic" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Naruci"
            android:layout_weight="2"
            android:background="@color/orange"
            android:layout_margin="3dp"
            android:id="@+id/btn_poruci"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5C5C5"
        android:layout_margin="5dp"/>

</RelativeLayout>